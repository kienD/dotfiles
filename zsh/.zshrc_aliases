function enableRecommendations() {
  curl -X POST --user "$userName:$password" http://localhost:3000/o/faro/main/project/$1/recommendations/enable
}

# Rancher

# Get logs for pod based on namespace & role
function checkRancherLogs() {
  selectedNamespace=$1
  selectedRole=$2

  # Check if any arguments exist
  if [ $# -eq 0 ]; then
    PS3="Select Namespace: "

    select namespace in $(rancher kubectl get namespaces --output=jsonpath={.items..metadata.name})

    do
      selectedNamespace=$namespace

      break;
    done
  fi

  echo "Namespace: $selectedNamespace"

  # Check if second argument exists
  if [ -z $2 ]; then
    PS3="Select Role: "

    select role in $(rancher kubectl -n $selectedNamespace get pods --output=jsonpath={.items..metadata.labels.role})

    do
      selectedRole=$role

      break;
    done
  fi

  echo "Role: $selectedRole"

  rancher kubectl -n kd-deployment logs -f $(rancher kubectl -n $selectedNamespace get pod --selector=role=$selectedRole --output=jsonpath={.items..metadata.name})
}
